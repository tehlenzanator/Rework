function setHarvester (creep, deposits) {
	for (var deposit in deposits) {
    if (deposit.availableEnergy > 0) {
      if (creep.pos.getRangeTo(deposit) <= 1) {
        creep.harvest(deposit);
      } else {
				creep.moveTo(deposit);
			}
    }
  }  
}
